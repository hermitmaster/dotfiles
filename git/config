[alias]
  aa = add -A
  au = add --update
  av = add --verbose
  b = branch
  ba = branch --all
  bd = branch --delete
  br = branch --remote
  c = commit -v
  ca = commit -v --amend
  cane = commit -v --amend --no-edit
  cl = clone
  cm = commit -m
  co = checkout
  cob = checkout -b
  com = checkout master
  d = diff
  ds = diff --staged
  fap = fetch --all --prune
  lg = log --graph
  lga = log --graph --decorate --all
  lgo = log --graph --oneline --decorate
  lgoa = log --graph --oneline --decorate --all
  lo = log --oneline --decorate
  ls = log --stat --paginate
  p = push
  pf = push --force
  rb = rebase
  st = status
  vd = "!nvim +DiffviewOpen"

[branch]
  autosetuprebase = always

[color]
  ui = true

[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red bold
  newNormal = green
  newHighlight = green bold

[color "diff"]
  meta = yellow
  frag = magenta bold
  func = cyan bold
  commit = yellow bold
  old = red
  new = green
  whitespace = red reverse

[core]
  autocrlf = input
  pager = diff-so-fancy | less --tabs=4 -RFX

[diff]
  colorMoved = plain
  renames = true
  renameLimit = 2000
  tool = nvimdiff

[difftool]
  prompt = false
  trustExitCode = true

[fetch]
  parallel = 0

[init]
  defaultBranch = main

[interactive]
  diffFilter = diff-so-fancy --patch

[pull]
  rebase = true

[push]
  default = upstream
  autoSetupRemote = true

[rebase]
  autostash = true

