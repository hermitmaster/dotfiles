[alias]
  au = add --update
  av = add --verbose
  ba = branch --all
  bd = branch --delete
  br = branch --remote
  c = commit -v
  ca = commit -v --amend
  cl = clone
  cm = commit -m
  cob = checkout -b
  com = checkout master
  lga = log --graph --decorate --all
  lgo = log --graph --oneline --decorate
  lgoa = log --graph --oneline --decorate --all
  lo = log --oneline --decorate
  ls = log --stat --paginate
  pub = "!f() { git push -u origin $(git rev-parse --abbrev-ref HEAD); }; f"

[branch]
  autosetuprebase = always

[core]
  autocrlf = input

[diff]
  tool = kitty
  guitool = kitty.gui

[difftool]
  prompt = false
  trustExitCode = true

[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
  cmd = kitty kitty +kitten diff $LOCAL $remote

[fetch]
  parallel = 0

[init]
  defaultBranch = main

[pull]
  rebase = true

[rebase]
  autostash = true

[submodule]
  recurse = true

[user]
  email = hermitmaster@icloud.com
  name = Dennis Rausch

[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig

