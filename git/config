[alias]
  aa = add -A
  au = add --update
  av = add --verbose
  b = branch
  ba = branch --all
  bd = branch --delete
  br = branch --remote
  c = commit -v
  ca = commit -v --amend
  cane = commit -v --amend --no-edit
  cl = clone
  cm = commit -m
  co = checkout
  cob = checkout -b
  com = checkout master
  d = diff
  ds = diff --staged
  fap = fetch --all --prune
  lg = log --graph
  lga = log --graph --decorate --all
  lgo = log --graph --oneline --decorate
  lgoa = log --graph --oneline --decorate --all
  lo = log --oneline --decorate
  ls = log --stat --paginate
  p = push
  pf = push --force
  rb = rebase
  st = status

[branch]
  autosetuprebase = always

[color]
  ui = true

[commit]
  verbose = true

[core]
  autocrlf = input
  pager = delta

[diff]
  algorithm = histogram
  colorMoved = plain

[difftool]
  prompt = false
  trustExitCode = true

[fetch]
  parallel = 0

[index]
  # https://github.com/romkatv/powerlevel10k/issues/2232
	skipHash = false

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = zdiff3

[pull]
  rebase = true

[push]
  autoSetupRemote = true
  default = upstream
  followTags = true

[rebase]
  autostash = true

[rerere]
  enabled = true

