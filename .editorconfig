root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{bat, cmd}]
end_of_line = crlf

[*.go]
indent_size = 4
indent_style = tab
max_line_length = 100

[*.{groovy, java}]
indent_size = 4

[*.lua]
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.rego]
indent_size = 4
indent_style = tab

[*.sql]
indent_size = 4

[*.xml]
indent_size = 4
